html, body{
    margin:0;
    padding:0;
    width:100%;
    height:100%;
}
body{
    background-image:url(../img/bg.jpeg);
    background-size:cover;
}
input, textarea {
    padding: 8px;
    box-sizing: border-box;
    resize: none;
}
input, textarea, button {
    border: none;
    outline: none;
    -webkit-appearance: none;
}
table {
    width: 100%;
    border: none;
    border-collapse: collapse;
    border-spacing: 0;
}
thead {
    height: 42px;
    text-align: center;
    line-height 42px;
    font-size: 16px;
    background-color: #f5f5f5;
}
thead th {
    font-weight: normal;
}
tbody tr{
    height: 36px;
    line-height 36px;
    font-size: 16px;
}
tbody tr:nth-child(even){
    background-color: #f9f9f9;
}
tbody tr:nth-child(odd){
    background-color: #fff;
}
tbody tr td {
    padding: 0 15px;
    word-break: break-all;
}