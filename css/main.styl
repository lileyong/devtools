html, body{
    margin:0;
    padding:0;
    width:100%;
    height:100%;
}
body{
    background-image:url(../img/bg.jpeg);
    background-size:cover;
}
input, textarea {
    padding: 8px;
    box-sizing: border-box;
}
input, textarea, button {
    border: none;
    outline: none;
    -webkit-appearance: none;
}